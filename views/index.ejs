<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header.ejs') %>
<body>
 
    <%- include('./partials/nav.ejs') %>

    <section class="dark-div p-sm-5">
        <container-fluid>
            <div class="row">
                <div class="col small-center">
                    <h1>Welcome to Class Registration</h1>
                    <p>Please select your classes from the following list</p>
                </div>
                <div class="col text-center">
                    <img src="/student.jpg" class="img-sm" alt="dDesigned by pch.vector / Freepik">
                </div>
            </div>
        </container-fluid>
    </section>

    <section class="mt-3">
        <container>
            <% if (courses.length > 0) { %>
                <% courses.forEach((course) => { %>
                <div class="row mt-3">
                    <div class="col-3 text-center"><%= course.short %></div>
                    <div class="col-6"><%= course.description %></div>
                    <div class="col-3"><button type="button" class="btn dark-btn" data-bs-toggle="modal" data-bs-target="#modal<%= course._id %>">More Details</button></div>
                </div>

                <div class="modal fade" id="modal<%= course._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"><%= course.name %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                        <p><b>Taught By: </b><%= course.instructor %></p>
                        <p><b>Credits Earned: </b><%= course.credits %> hours</p>
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn dark-btn">Sign Up</button>
                        </div>
                    </div>
                    </div>
                </div>
                <% }); %>
            <% } else { %>
                <p>There are no courses.</p>
            <% } %>

        </container>
    </section>

    <!-- scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>